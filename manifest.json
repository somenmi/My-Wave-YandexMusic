{
    "manifest_version": 3,
    "name": "Моя волна | Яндекс Музыка | by Yalkee",
    "short_name": "Моя волна",
    "version": "1.0.1",
    "description": "Пользовательские фильтры к элементу: «Моя Волна» (анимация) | Яндекс Музыка",
    "author": "Yalkee",
    "homepage_url": "https://yalkee.vercel.app",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "24": "icons/icon24.png",
            "32": "icons/icon32.png"
        },
        "default_title": "Настроить фильтры",
        "default_width": 600,
        "default_height": 600
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://music.yandex.ru/*",
        "*://music.yandex.uz/*",
        "*://music.yandex.kz/*",
        "*://music.yandex.by/*",
        "*://music.yandex.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injected/filter.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "*://music.yandex.ru/*",
                "*://music.yandex.uz/*",
                "*://music.yandex.kz/*",
                "*://music.yandex.by/*",
                "*://music.yandex.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "offline_enabled": true,
    "incognito": "spanning",
    "minimum_opera_version": "80.0",
    "opera": {
        "compatible": true,
        "autoupdate": false
    }
}